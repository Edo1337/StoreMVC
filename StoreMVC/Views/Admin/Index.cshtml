@{
    ViewData["Title"] = "Админ панель";
}

@model IEnumerable<StoreMVC.Models.Product>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="navbar navbar-expand-lg">
    <div class="container" style="color: rosybrown">
        <form asp-action="Index" class="row row-cols-lg-auto g-3 align-items-center">
            <ul class="navbar-nav me-auto" style="text-transform: uppercase">
                <li class="nav-item" style="width:50%">
                    @Html.ActionLink("Добавить продукт", "Create", null,
                             new { @class = "btn btn-default" })

                </li>
                <li class="nav-item" style="width:50%">
                    <a class="nav-link" href="#"> Управление категориями (soon)</a>
                </li>
                <li class="nav-item" style="width:50%">
                    <a class="nav-link" href="#"> Управление заказами (soon)</a>
                </li>
                <li class="nav-item" style="width:50%">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Вернуться в магазин</a>
                </li>
            </ul>
        </form>
    </div>
</header>


<div class="container">
    <div class="panel panel-default">



@*         <div class="panel-footer m-3">
            @Html.ActionLink("Добавить продукт", "Create", null,
                     new { @class = "btn btn-default" })
            <a class="nav-link" href="#"> Управление категориями (soon)</a>
            <a class="nav-link" href="#"> Управление заказами (soon)</a>
            <a class="nav-link" asp-controller="Home" asp-action="Index">Вернуться в магазин</a>
        </div> *@

        <div class="panel-heading m-4 text-center">
            <h2><strong>Список продуктов</strong></h2>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered text-center">
                <tr>
                    <th class="text-right">ID</th>
                    <th>Название</th>
                    <th>ID Категории</th>
                    <th>Категория</th>
                    <th class="text-center">Цена</th>
                    <th class="text-center">Действие</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@Html.ActionLink(item.ProductName, "Edit", new { item.Id })</td>
                        <td>@item.CategoryId</td>
                        <td>@item.Category.CategoryName</td>
                        <td>@item.Price.ToString("# руб").</td>
                        <td>
                            @using (Html.BeginForm("Delete", "Admin"))
                            {
                                @Html.Hidden("Id", item.Id)
                                <input type="submit"
                                       class="btn btn-default btn-xs"
                                       style="color: black"
                                       value="Удалить" />
                            }
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Кошачий рай</title>

    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Oswald:wght@500&display=swap">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>



<body>
    <header class="navbar navbar-expand-lg">
        <div class="container" style="color: rosybrown">
            <form asp-action="Index" class="row row-cols-lg-auto g-3 align-items-center">
                <ul class="navbar-nav flex-grow-2" style="text-transform: uppercase">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Products">Продукты</a>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link text-dark">|</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Категории (soon)</a>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link text-dark">|</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Orders">Заказы (soon)</a>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link text-dark">|</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Вернуться в магазин</a>
                    </li>
                </ul>
            </form>
        </div>
    </header>
    <div>
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        @RenderBody()
    </div>
</body>
</html>
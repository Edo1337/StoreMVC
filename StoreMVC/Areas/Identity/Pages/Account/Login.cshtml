@page
@model LoginModel

@{
    ViewData["Title"] = "Вход в аккаунт";
}

<div class="row">
    <div class="col-md">
        <section>
            <form id="account" method="post">
                <h1>Вход в аккаунт</h1>
                <hr class="border-0" />
                <p>Пожалуйста, введите данные, чтобы войти в аккаунт.</p>
                <hr class="border-0" />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="row justify-content-center">

                    <label asp-for="Input.Email"><b>Введите почту:</b></label>
                    <input type="text" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>

                    <label asp-for="Input.Password"><b>Введите пароль:</b></label>
                    <input type="password" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Пароль" />
                    <span asp-validation-for="Input.Password"></span>

                </div>
                <hr class="border-0" />
                    <div class="d-flex justify-content-center">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button id="login-submit" type="submit" class="w-50 btn btn-lg btn-primary btn-block">Войти</button>
                    </div>
            </form>
        </section>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
